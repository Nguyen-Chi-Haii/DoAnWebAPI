@{
    ViewBag.Title = "Duyệt ảnh";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<main class="flex-1 overflow-y-auto p-4 sm:p-6 pt-20 lg:pt-6">
    <h1 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-600"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z" /><path d="m9 12 2 2 4-4" /></svg>
        Duyệt ảnh
    </h1>

    <div class="flex flex-col sm:flex-row justify-between items-center gap-3 mb-6">
        <div class="flex items-center w-full sm:w-1/2 bg-white rounded-lg border border-gray-300 px-3 py-2 shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400 mr-2"><circle cx="11" cy="11" r="8" /><line x1="21" x2="16.65" y1="21" y2="16.65" /></svg>
            <input type="text"
                   id="search-input"
                   placeholder="Tìm theo tiêu đề, mô tả hoặc ID ảnh..."
                   class="flex-1 outline-none text-sm text-gray-700 bg-transparent" />
        </div>

        @* ✅ THÊM DROPDOWN SẮP XẾP *@
        <div class="w-full sm:w-auto">
            <select id="sort-select" class="w-full sm:w-40 bg-white border border-gray-300 rounded-lg px-3 py-2 text-sm text-gray-700 shadow-sm focus:ring-2 focus:ring-blue-400 transition">
                <option value="desc">Mới nhất</option>
                <option value="asc">Cũ nhất</option>
            </select>
        </div>
    </div>

    <div id="loading-spinner" class="text-center py-10 hidden">
        @* Thêm spinner SVG hoặc text nếu muốn *@
        <p class="text-gray-500 italic">Đang tải...</p>
    </div>
    <div id="image-list-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    </div>
    <p id="no-results" class="text-center text-gray-500 py-10 hidden italic">
        Không tìm thấy ảnh nào chờ duyệt.
    </p>

    <div class="flex justify-center items-center gap-3 mt-8">
        <button id="prev-page" class="p-2 bg-white border rounded-lg disabled:opacity-50 hover:bg-blue-50 transition">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6" /></svg>
        </button>
        <span id="page-info" class="text-sm">Trang <b>1</b> / 1</span>
        <button id="next-page" class="p-2 bg-white border rounded-lg disabled:opacity-50 hover:bg-blue-50 transition">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6" /></svg>
        </button>
    </div>
</main>

@* (Popup chi tiết giữ nguyên) *@
<div id="image-popup" class="fixed inset-0 bg-black/60 flex justify-center items-center z-50 p-4 hidden">
    <div class="bg-white rounded-xl shadow-xl w-full max-w-lg relative max-h-[90vh] overflow-y-auto">
        <div class="sticky top-0 bg-white p-4 sm:p-6 border-b z-10">
            <div class="flex justify-between items-center">
                <h2 id="popup-title" class="text-xl font-semibold">Chi tiết ảnh</h2>
                <button id="close-popup-btn" class="text-gray-400 hover:text-gray-700 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10" /><line x1="15" x2="9" y1="9" y2="15" /><line x1="9" x2="15" y1="9" y2="15" /></svg>
                </button>
            </div>
        </div>

        <div class="p-4 sm:p-6">
            <img id="popup-image" src="" alt="Chi tiết ảnh" class="w-full h-auto max-h-[50vh] object-contain rounded-lg mb-4 bg-gray-100" />

            <p id="popup-description" class="text-gray-600 mb-3"></p>
            <div class="text-sm text-gray-500 mb-4 space-y-1">
                <p id="popup-uploader" class="flex items-center gap-1"></p>
                <p id="popup-uploadedAt" class="flex items-center gap-1"></p>
            </div>

            <div class="flex justify-end gap-3 pt-4 border-t">
                <button id="popup-reject-btn" class="px-5 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition text-sm font-medium">
                    Từ chối
                </button>
                <button id="popup-approve-btn" class="px-5 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition text-sm font-medium">
                    Phê duyệt
                </button>
            </div>
        </div>
    </div>
</div>


<script src="~/js/AdminApproval.js"></script>