@* File: Views/Admin/AdminStats.cshtml *@
@{
    ViewData["Title"] = "Thống kê hệ thống";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="p-4 sm:p-8">
    <h1 class="text-2xl font-bold mb-6 flex items-center gap-2 text-gray-800">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-600"><path d="M3 3v18h18" /><path d="M18 17V9" /><path d="M13 17V5" /><path d="M8 17v-3" /></svg>
        Thống kê hệ thống
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">

        <div class="admin-card p-5 border border-gray-200 rounded-xl">
            <div class="flex items-center justify-between">
                <h3 class="text-gray-500 text-sm">Tổng ảnh đã duyệt</h3>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-500"><rect width="18" height="18" x="3" y="3" rx="2" ry="2" /><circle cx="9" cy="9" r="2" /><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21" /></svg>
            </div>
            @* ✅ Added ID here *@
            <p id="totalApprovedImages" class="text-3xl font-bold mt-3">...</p>
        </div>

        <div class="admin-card p-5 border border-gray-200 rounded-xl">
            <div class="flex items-center justify-between">
                <h3 class="text-gray-500 text-sm">Tổng người dùng</h3>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-purple-500"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M22 21v-2a4 4 0 0 0-3-3.87" /><path d="M16 3.13a4 4 0 0 1 0 7.75" /></svg>
            </div>
            @* ✅ Added ID here *@
            <p id="totalUsers" class="text-3xl font-bold mt-3">...</p>
        </div>

        @* --- Removed Likes and Downloads cards --- *@

    </div>

    <div class="admin-card p-6 mb-8">
        <h2 class="text-lg font-semibold mb-4 text-gray-700">👥 Tăng trưởng người dùng</h2>
        <div>
            @* ✅ Kept this canvas with its ID *@
            <canvas id="userGrowthChart"></canvas>
            <p id="chart-error" class="text-center text-red-500 italic mt-4 hidden"></p> @* Error message placeholder *@
        </div>
    </div>

    @* --- Removed Top Tags/Topics and Activity Chart sections --- *@

</main>

@* Reference Chart.js library *@
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
@* Reference your updated AdminStats.js *@
<script src="~/js/AdminStats.js"></script>