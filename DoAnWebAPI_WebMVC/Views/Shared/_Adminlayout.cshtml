<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/Sidebar.css">
    <link rel="stylesheet" href="~/css/AdminPanel.css">
</head>
<body class="bg-gray-50 text-gray-800">

    <div class="flex flex-col h-screen">

        <header class="lg:hidden fixed top-0 left-0 right-0 bg-white shadow-sm z-40 flex items-center justify-between p-4 border-b">
            <h2 class="text-lg font-semibold">Admin Panel</h2>
            <button id="mobile-menu-button" class="text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12" /><line x1="4" x2="20" y1="6" y2="6" /><line x1="4" x2="20" y1="18" y2="18" /></svg>
            </button>
        </header>

        <div class="flex flex-1 overflow-hidden">

            @await Html.PartialAsync("AdminSidebar")

            <main class="flex-1 overflow-y-auto p-8 pt-20 lg:pt-8">
                @RenderBody()
            </main>

        </div>

        <footer class="border-t text-muted p-4 text-center bg-white">
            @await Html.PartialAsync("_layoutFooter")
        </footer>

    </div>

    <div id="backdrop" class="fixed inset-0 bg-black/30 z-40 lg:hidden hidden"></div>

    <script src="https://unpkg.com/lucide@latest"></script>
    <script src="~/js/Footer.js"></script>
    <script src="~/js/Sidebar.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="~/js/apiServices.js"></script>
</body>
</html>