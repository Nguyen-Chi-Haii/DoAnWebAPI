<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Gallery</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Collection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ImageDetail.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CollectionDetail.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 flex flex-col min-h-screen">
    <header class="flex-shrink-0">
        @await Html.PartialAsync("_layoutHeader")
    </header>

    <main role="main" class="flex-grow flex justify-center items-center">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted flex-shrink-0">
        @await Html.PartialAsync("_layoutFooter")
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Footer.js" asp-append-version="true"></script>
    <script src="~/js/Header.js" asp-append-version="true"></script>

    <script src="https://unpkg.com/lucide@latest"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>