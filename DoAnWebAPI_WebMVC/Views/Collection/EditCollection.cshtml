@{
    ViewData["Title"] = "Chỉnh Sửa Bộ Sưu Tập";
    Layout = "_FormLayout";
}

<div class="form-container" data-collection-id="@ViewBag.CollectionId">
    <div class="form-header">
        <h2 class="form-title">Chỉnh Sửa Bộ Sưu Tập</h2>
    </div>

    <form id="edit-collection-form" class="form-body">
        <div>
            <label for="collection-name" class="form-label">Tên bộ sưu tập</label>
            <input type="text" id="collection-name" class="form-input" placeholder="Ví dụ: Cảnh biển mùa hè" required />
        </div>

        <div>
            <label for="collection-description" class="form-label">Mô tả</label>
            <textarea id="collection-description" rows="3" class="form-textarea" placeholder="Nhập mô tả ngắn về bộ sưu tập..."></textarea>
        </div>

        <div class="privacy-toggle-container">
            <span id="privacy-status-text" class="form-label">Công khai</span>
            <button type="button" id="privacy-toggle-btn" class="btn btn-blue">
                <i data-lucide="globe"></i>
                <span>Công khai</span>
            </button>
        </div>

        <div>
            <label class="form-label label-with-icon">
                <i data-lucide="image-plus"></i> Ảnh của bộ sưu tập
            </label>
            <div id="image-preview-container" class="image-preview-container">
                <button type="button" id="add-image-btn" class="add-image-placeholder">
                    <i data-lucide="plus"></i>
                    <span class="add-image-text">Thêm/Bớt ảnh</span>
                </button>
            </div>
        </div>

        <div class="form-actions">
            <button type="button" id="cancel-btn" class="btn btn-gray">Hủy</button>
            <button type="submit" class="btn btn-blue btn-with-icon">
                <i data-lucide="check"></i> Lưu thay đổi
            </button>
        </div>
    </form>
</div>

<div id="select-photos-modal" class="select-photos-modal-overlay hidden">
    <div class="select-photos-modal-container">
        <div class="select-photos-modal-header">
            <h3 class="select-photos-modal-title">Quản lý ảnh trong bộ sưu tập</h3>
            <button id="select-photos-close-btn" class="select-photos-modal-close">
                <i data-lucide="x"></i>
            </button>
        </div>
        <div id="my-photos-grid" class="select-photos-modal-grid">
        </div>
        <div class="select-photos-modal-footer">
            <span id="selection-counter">Đã chọn: 0 ảnh</span>
            <button id="update-selected-photos-btn" class="btn btn-blue">
                <i data-lucide="check-circle"></i> Cập nhật danh sách
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const CURRENT_USER_ID = '@(Context.Session.GetString("UserId"))';
    </script>
    <script src="~/js/editCollection.js" asp-append-version="true"></script>
}