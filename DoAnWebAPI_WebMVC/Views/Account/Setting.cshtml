@{
    ViewData["Title"] = "Cài đặt tài khoản";
    Layout = "_FormLayout";
}

<div class="settings-container">
    <aside class="settings-menu">
        <div class="settings-menu__header">
            <h2 class="settings-menu__title">
                <i data-lucide="settings"></i> Cài đặt & Cá nhân hóa
            </h2>
        </div>

        <nav id="settings-nav" class="settings-menu__nav">
            <button data-tab="profile" class="nav-button active">
                <i data-lucide="user"></i> Quản lý tài khoản
            </button>
            <button data-tab="password" class="nav-button">
                <i data-lucide="key"></i> Đổi mật khẩu
            </button>
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button id="settings-logout-btn" type="submit" class="nav-button nav-button--danger">
                    <i data-lucide="log-out"></i> Đăng xuất
                </button>
            </form>
            <a href="/" class="nav-button nav-button--secondary">
                <i data-lucide="home"></i> Trở về trang chính
            </a>
        </nav>
    </aside>

    <main class="settings-content">
        <div class="tabs-container">
            <div id="settings-profile-tab" class="tab-content is-active">
                <h3 class="tab-title">Chức năng sẽ được phát triển<h3>
            </div>

            <div id="settings-password-tab" class="tab-content">
                <h3 class="tab-title">Đổi mật khẩu</h3>
                <form id="settings-password-form" class="tab-form">
                    <input type="password" id="settings-current-password" placeholder="Mật khẩu hiện tại" class="form-input" required /> <input type="password" id="settings-new-password" placeholder="Mật khẩu mới" class="form-input" required /> <input type="password" id="settings-confirm-password" placeholder="Xác nhận mật khẩu mới" class="form-input" required /> <button type="submit" class="btn btn-green btn-with-icon">
                        <i data-lucide="check"></i> Cập nhật mật khẩu
                    </button>
                </form>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script src="~/js/Setting.js" asp-append-version="true"></script>
}